<%- include('partials/header') %>

    <div class="container-fluid" style="padding-top:0px;">
        <div class="row">
            <div class="col">
                <h1 class="text-center black">Carental <img
                        src="https://tse1.mm.bing.net/th?id=OIP.BrvR9-atH0KR2dbpeW0wxAHaF7&pid=Api&P=0&h=220" alt="logo"
                        style="height: 4em;"></h1>
            </div>
            <div class="col">
                <h2 class="text-center black display-6" style="padding-top:50px;">Welcome, <%= userEmail %></span></h2>
            </div>
            <div class="col">
                <div class="col text-center" style="padding-top:50px;">
                    <form action="/logout" method="POST">
                        <button type="submit" class="col btn btn-outline-danger" style="margin:10px; width: 33%;">Log
                            Out</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="row" style="margin:50px;">
            <div class="col-4 m-0">
                <h3 class="text-center black display-6">Your current Reservations</h3>
            </div>
            <div class="col"></div>
            <div class="col-2">
                <form action="/reserve" method="POST">
                    <button type="submit" class="col btn btn-outline-success" name="userName"
                        value="<%= userEmail %>">New Reservation</button>
                </form>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">Reservation ID</th>
                            <th scope="col">Car ID</th>
                            <th scope="col">Pickup Date</th>
                            <th scope="col">Return Date</th>
                            <th scope="col">Model</th>
                            <th scope="col">Make</th>
                            <th scope="col">Year</th>
                            <th scope="col">Total Cost</th>
                            <th scope="col">Payment Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (userReservations) { %>
                            <% userReservations.forEach(reservation=> { %>
                                <tr>
                                    <td>
                                        <%= reservation.reservation_no %>
                                    </td>
                                    <td>
                                        <%= reservation.plate_id %>
                                    </td>
                                    <td>
                                        <%= reservation.pickup_date %>
                                    </td>
                                    <td>
                                        <%= reservation.return_date %>
                                    </td>
                                    <td>
                                        <%= reservation.model %>
                                    </td>
                                    <td>
                                        <%= reservation.make %>
                                    </td>
                                    <td>
                                        <%= reservation.year %>
                                    </td>
                                    <td>
                                        <%= reservation.revenue %>
                                    </td>
                                    <% if (reservation.payment_date==null) { %>
                                        <td>
                                            <form action="/pay-reservation" method="POST">
                                                <input type="hidden" name="reservation_no"
                                                    value="<%= reservation.reservation_no %>">
                                                <button type="submit" class="btn btn-outline-success"
                                                    id="<%= reservation.reservation_no %>">Pay</button>
                                            </form>
                                        </td>
                                        <% } else { %>
                                            <td>
                                                <%= reservation.payment_date %>
                                            </td>
                                            <% } %>
                                </tr>
                                <% }); %>
                                    <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <%- include('partials/footer') %>