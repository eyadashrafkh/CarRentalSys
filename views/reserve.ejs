<%- include('partials/header') %>


    <div class="container-fluid" style="padding-top:0px;">
        <div class="row">
            <div class="col">
                <h1 class="text-center black">Carental <img
                        src="https://tse1.mm.bing.net/th?id=OIP.BrvR9-atH0KR2dbpeW0wxAHaF7&pid=Api&P=0&h=220" alt="logo"
                        style="height: 4em;"></h1>
            </div>
            <div class="col">
                <h2 class="text-center black display-6" style="padding-top:50px;">
                    <%= userEmail %></span>
                </h2>
            </div>
            <div class="col">
                <div class="col text-center" style="padding-top:50px;">
                    <form action="/logout" method="POST">
                        <button type="submit" class="col btn btn-outline-danger" style="margin:10px; width: 33%;">Log
                            Out</button>
                    </form>
                </div>
            </div>
        </div>
        <div>
            <h3 class="display-5 align-content-center text-center" style="padding: 1.5rem 0;">Reserve a Car</h3>
        </div>
        <div class="row specs" style="margin: 5px;">
            
            <div class="col">
                <label for="modelSelect" class="display-6 date">Model</label>
                <select class="form-select" id="modelSelect">
                    <option value="any">Any</option>
                </select>
            </div>
            <div class="col">
                <label for="makeSelect" class="display-6 date">Make</label>
                <select class="form-select" id="makeSelect">
                    <option value="any">Any</option>
                </select>
            </div>
            <div class="col">
                <label for="body_styleSelect" class="display-6 date">body_style</label>
                <select class="form-select" id="body_styleSelect">
                    <option value="any">Any</option>
                </select>
            </div>
            <div class="col">
                <label for="locationSelect" class="display-6 date">Location</label>
                <select class="form-select" id="locationSelect">
                    <option value="any">Any</option>
                </select>
            </div>
            <div class="col">
                <label for="colorSelect" class="display-6 date">color</label>
                <select class="form-select" id="colorSelect">
                    <option value="any">Any</option>
                </select>
            </div>
        </div>
        <div class="justify-content-center">
            <label for="pickDate" class="display-6 date">Pickup Date</label>
            <input type="date" id="pickDate" name="start_date" required=""
                value="<%= new Date().toISOString().split('T')[0] %>"
                min="<%= new Date().toISOString().split('T')[0] %>">
            <label for="returnDate" class="display-6 date">Return Date:</label>
            <input type="date" id="returnDate" name="end_date" required=""
                value="<%= new Date(new Date().getFullYear() + 1, 0, 1).toISOString().split('T')[0] %>" disabled>
            <div><button id="getAvailable" class="btn btn-outline-success mybtn g black reserve-btn1">Show Available
                    Cars</button></div>
        </div>
        <div class="card-container overflow-auto justify-content-center height">

        </div>
        <div class="form-check justify-content-center h4" style="padding: 0;">
            <input id="payNow" class="form-check-input h4" checked="true"
                style="float:inherit; background-color: green;" type="checkbox" value="">
            <label class="form-check-label h4" for="payNow">
                Pay Now
            </label>
            <div><button id="reserve-btn" class="btn btn-success mybtn g white reserve-btn1">Reserve</button></div>
        </div>
    </div>

<%- include('partials/footer') %>